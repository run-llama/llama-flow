    "@changesets/cli": "^2.29.2",
    "@edge-runtime/vm": "^5.0.0",
    "happy-dom": "^17.4.4",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "prettier": "^3.5.3",
    "tsdown": "^0.11.12",
    "turbo": "^2.5.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.1"
  }
}
