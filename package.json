{
  "name": "monorepo",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "packageManager": "pnpm@10.8.1",
  "pnpm": {
    "onlyBuiltDependencies": [
      "@swc/core"
    ],
    "patchedDependencies": {
      "graphviz-builder": "patches/graphviz-builder.patch"
    }
